<form method='post' action='/users/login'>
  <div>
    <label>
      Username:
      <input type='text' name='username' value=<%= params[:username] %>>
    </label>
  </div>
  <div>
    <label>
      Password:
      <input type='password' name='password' %>
    </label>
  </div>
  <input type='submit' value='Sign In'>
</form>